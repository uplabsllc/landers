{{#get "posts" limit="5" as |recents|}}
<div class="row">
<div class="col-md-12">
<h4 class="headline">YOU MIGHT ALSO LIKE</h4>
<div class="row">
<section class="recent-posts">
  <ul class="thumbnails">
  {{#foreach recents}}
    <a href={{url}}><li class="span4">
      <div class="recent-post right-caption span4">
      <div class="col-xs-6">
      <img src="{{image}}" />
      </div>
      <div class="col-xs-6 caption">
      {{title}}
      </div>
        <div class="clearfix"></div>

      </div>
    </li> </a>
    {{/foreach}}
  </ul>
</section>
</div>
</div>
</div>
{{/get}}